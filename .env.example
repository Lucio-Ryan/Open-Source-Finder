# MongoDB Configuration
# Copy this file to .env.local and fill in your MongoDB credentials

# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/open-source-finder

# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Site Configuration (for SEO and metadata)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Optional: GitHub Token for enhanced GitHub API access (higher rate limits)
# GITHUB_TOKEN=your-github-personal-access-token
